<section id="contact" class="py-20 transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-900'">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 animate-slide-up">
      <h2 class="text-4xl font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Get In Touch</h2>
      <p class="text-lg transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-300'">Let's discuss your next DevOps project</p>
    </div>
    
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <!-- Contact Info -->
        <div class="animate-slide-up">
          <h3 class="text-2xl font-bold mb-8 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Contact Information</h3>
          
          <div class="space-y-6">
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4 transition-colors duration-300" :class="lightMode ? 'bg-blue-100' : 'bg-gray-800'">
                <svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Email</p>
                <a href="mailto:sushantsonbarse07@gmail.com" class="text-blue-400 hover:underline">
                  sushantsonbarse07@gmail.com
                </a>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4 transition-colors duration-300" :class="lightMode ? 'bg-green-100' : 'bg-gray-800'">
                <svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Phone</p>
                <p class="transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-300'">+91 9146570820</p>
              </div>
            </div>
            
            <div class="flex items-center">
              <div class="w-12 h-12 rounded-lg flex items-center justify-center mr-4 transition-colors duration-300" :class="lightMode ? 'bg-orange-100' : 'bg-gray-800'">
                <svg class="w-6 h-6 text-orange-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="font-semibold transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Location</p>
                <p class="transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-300'">Nagpur, Maharashtra, India</p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Image -->
        <div class="animate-slide-up" style="animation-delay: 0.2s">
          <img src="https://via.placeholder.com/500x500.png?text=Contact+Image" alt="Contact" class="rounded-2xl shadow-xl">
        </div>
      </div>
    </div>
  </div>
</section>