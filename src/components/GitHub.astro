<section id="github" class="py-20 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-6">
    <div class="text-center mb-16 animate-slide-up">
      <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white">GitHub Profile</h2>
      <p class="text-lg text-gray-600 dark:text-gray-300">My open source contributions and repositories</p>
    </div>
    
    <!-- GitHub Stats -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12 max-w-4xl mx-auto">
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition-all duration-300">
        <h3 id="repo-count" class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">-</h3>
        <p class="text-gray-600 dark:text-gray-300">Repositories</p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition-all duration-300">
        <h3 id="follower-count" class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">-</h3>
        <p class="text-gray-600 dark:text-gray-300">Followers</p>
      </div>
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 text-center shadow-lg hover:shadow-xl transition-all duration-300">
        <h3 id="following-count" class="text-3xl font-bold text-primary-600 dark:text-primary-400 mb-2">-</h3>
        <p class="text-gray-600 dark:text-gray-300">Following</p>
      </div>
    </div>
    
    <!-- GitHub README -->
    <div class="max-w-6xl mx-auto mb-12">
      <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white flex items-center">
          📋 GitHub Profile README
        </h3>
        <div id="github-readme" class="prose prose-lg dark:prose-invert max-w-none">
          <!-- GitHub README content will be loaded here -->
          <div class="text-center py-8">
            <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600 mx-auto"></div>
            <p class="mt-4 text-gray-600 dark:text-gray-300">Loading GitHub profile...</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Pinned Repositories -->
    <div class="max-w-6xl mx-auto">
      <h3 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white text-center">
        📌 Featured Repositories
      </h3>
      <div id="repos-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Repository cards will be loaded here -->
        <div class="bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-lg animate-pulse">
          <div class="h-4 bg-gray-300 dark:bg-gray-600 rounded mb-4"></div>
          <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded mb-2"></div>
          <div class="h-3 bg-gray-300 dark:bg-gray-600 rounded mb-4"></div>
          <div class="flex space-x-2">
            <div class="h-6 w-12 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
            <div class="h-6 w-12 bg-gray-300 dark:bg-gray-600 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .repo-card {
    @apply bg-gray-50 dark:bg-gray-800 rounded-xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1;
  }
  
  .repo-card h5 {
    @apply text-lg font-semibold mb-3 text-gray-900 dark:text-white;
  }
  
  .repo-card h5 a {
    @apply text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 transition-colors;
  }
  
  .repo-card p {
    @apply text-gray-600 dark:text-gray-300 mb-4 text-sm leading-relaxed;
  }
  
  .repo-stats {
    @apply flex flex-wrap gap-3 text-sm text-gray-500 dark:text-gray-400;
  }
  
  .repo-stats span {
    @apply flex items-center gap-1;
  }
  
  /* GitHub README Styles */
  #github-readme h1 {
    @apply text-3xl font-bold text-center mb-6 text-primary-600 dark:text-primary-400;
  }
  
  #github-readme h3 {
    @apply text-xl font-semibold mb-4 text-gray-900 dark:text-white;
  }
  
  #github-readme p {
    @apply mb-4 text-gray-700 dark:text-gray-300;
  }
  
  #github-readme img {
    @apply max-w-full h-auto rounded-lg;
  }
  
  #github-readme a {
    @apply text-primary-600 dark:text-primary-400 hover:underline;
  }
  
  #github-readme ul {
    @apply list-disc list-inside mb-4 text-gray-700 dark:text-gray-300;
  }
  
  #github-readme blockquote {
    @apply border-l-4 border-primary-600 pl-4 italic text-gray-600 dark:text-gray-400 bg-gray-50 dark:bg-gray-800 p-4 rounded-r-lg;
  }
</style>

<script>
  // GitHub API Integration
  const GITHUB_USERNAME = 'sonbarse17';
  const GITHUB_API = `https://api.github.com/users/${GITHUB_USERNAME}`;
  const GITHUB_REPOS_API = `https://api.github.com/users/${GITHUB_USERNAME}/repos?sort=updated&per_page=100`;

  async function fetchGitHubData() {
    try {
      // Fetch user data
      const userResponse = await fetch(GITHUB_API);
      const userData = await userResponse.json();
      
      document.getElementById('repo-count').textContent = userData.public_repos;
      document.getElementById('follower-count').textContent = userData.followers;
      document.getElementById('following-count').textContent = userData.following;
      
      // Fetch repositories
      const reposResponse = await fetch(GITHUB_REPOS_API);
      const allRepos = await reposResponse.json();
      
      // Filter and sort repositories by relevance
      const filteredRepos = allRepos
        .filter(repo => !repo.fork)
        .sort((a, b) => {
          const aScore = (a.stargazers_count * 3) + (a.forks_count * 2) + 
                        (a.name.toLowerCase().includes('devops') ? 10 : 0) +
                        (a.name.toLowerCase().includes('portfolio') ? 15 : 0) +
                        (a.name.toLowerCase().includes('project') ? 8 : 0);
          
          const bScore = (b.stargazers_count * 3) + (b.forks_count * 2) + 
                        (b.name.toLowerCase().includes('devops') ? 10 : 0) +
                        (b.name.toLowerCase().includes('portfolio') ? 15 : 0) +
                        (b.name.toLowerCase().includes('project') ? 8 : 0);
          
          return bScore - aScore;
        })
        .slice(0, 6);
      
      // Display repositories
      const reposList = document.getElementById('repos-list');
      reposList.innerHTML = filteredRepos.map(repo => `
        <div class="repo-card">
          <h5><a href="${repo.html_url}" target="_blank">${repo.name}</a></h5>
          <p>${repo.description || 'No description available'}</p>
          <div class="repo-stats">
            <span>⭐ ${repo.stargazers_count}</span>
            <span>🍴 ${repo.forks_count}</span>
            ${repo.language ? `<span>💻 ${repo.language}</span>` : ''}
          </div>
        </div>
      `).join('');
      
      // Load GitHub README content
      loadGitHubReadme();
      
    } catch (error) {
      console.error('Error fetching GitHub data:', error);
      document.getElementById('repo-count').textContent = 'Error';
      document.getElementById('follower-count').textContent = 'Error';
      document.getElementById('following-count').textContent = 'Error';
    }
  }

