
---
---

<section id="demos" class="py-20 transition-colors duration-300" :class="lightMode ? 'bg-white' : 'bg-black'">
  <div class="container mx-auto px-4 sm:px-6">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-16 animate-slide-up">
        <h2 class="text-3xl sm:text-4xl font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Interactive Demos</h2>
        <p class="text-lg transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-400'">Explore my DevOps tools and configurations</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Kubernetes Dashboard Demo -->
        <div class="animate-slide-up card-3d">
          <div class="h-full p-8 rounded-2xl border transition-all duration-300 hover:shadow-xl glassmorphism" :class="lightMode ? 'border-gray-200' : 'border-gray-700'">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-blue-500 rounded-2xl flex items-center justify-center mx-auto mb-4 animate-pulse-glow">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Kubernetes Dashboard</h3>
              <p class="text-sm transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-400'">Interactive cluster metrics and pod management</p>
            </div>
            
            <!-- Simulated Dashboard -->
            <div class="space-y-4">
              <div class="flex justify-between items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Pods Running</span>
                <span class="text-green-400 font-bold">12/12</span>
              </div>
              <div class="flex justify-between items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">CPU Usage</span>
                <div class="flex items-center">
                  <div class="w-16 h-2 bg-gray-300 rounded-full mr-2">
                    <div class="h-2 bg-blue-400 rounded-full animate-pulse" style="width: 65%"></div>
                  </div>
                  <span class="text-sm text-blue-400">65%</span>
                </div>
              </div>
              <div class="flex justify-between items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Memory Usage</span>
                <div class="flex items-center">
                  <div class="w-16 h-2 bg-gray-300 rounded-full mr-2">
                    <div class="h-2 bg-yellow-400 rounded-full animate-pulse" style="width: 45%"></div>
                  </div>
                  <span class="text-sm text-yellow-400">45%</span>
                </div>
              </div>
            </div>
            
            <button onclick="toggleDemo('k8s-demo')" class="w-full mt-6 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500/50" :class="lightMode ? 'bg-blue-600 text-white hover:bg-blue-700' : 'bg-blue-500 text-white hover:bg-blue-600'">
              View Full Demo
            </button>
          </div>
        </div>

        <!-- CI/CD Pipeline Demo -->
        <div class="animate-slide-up card-3d" style="animation-delay: 0.1s">
          <div class="h-full p-8 rounded-2xl border transition-all duration-300 hover:shadow-xl glassmorphism" :class="lightMode ? 'border-gray-200' : 'border-gray-700'">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-green-500 rounded-2xl flex items-center justify-center mx-auto mb-4 animate-pulse-glow">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">CI/CD Pipeline</h3>
              <p class="text-sm transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-400'">Live pipeline execution and deployment tracking</p>
            </div>
            
            <!-- Simulated Pipeline -->
            <div class="space-y-3">
              <div class="flex items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <div class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></div>
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Build: Success</span>
              </div>
              <div class="flex items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <div class="w-3 h-3 bg-green-400 rounded-full mr-3 animate-pulse"></div>
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Test: Passed</span>
              </div>
              <div class="flex items-center p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <div class="w-3 h-3 bg-yellow-400 rounded-full mr-3 animate-pulse"></div>
                <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Deploy: In Progress</span>
              </div>
            </div>
            
            <button onclick="toggleDemo('cicd-demo')" class="w-full mt-6 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-green-500/50" :class="lightMode ? 'bg-green-600 text-white hover:bg-green-700' : 'bg-green-500 text-white hover:bg-green-600'">
              View Pipeline
            </button>
          </div>
        </div>

        <!-- Infrastructure Monitoring Demo -->
        <div class="animate-slide-up card-3d" style="animation-delay: 0.2s">
          <div class="h-full p-8 rounded-2xl border transition-all duration-300 hover:shadow-xl glassmorphism" :class="lightMode ? 'border-gray-200' : 'border-gray-700'">
            <div class="text-center mb-6">
              <div class="w-16 h-16 bg-purple-500 rounded-2xl flex items-center justify-center mx-auto mb-4 animate-pulse-glow">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-2 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Infrastructure Monitor</h3>
              <p class="text-sm transition-colors duration-300" :class="lightMode ? 'text-gray-600' : 'text-gray-400'">Real-time system health and performance metrics</p>
            </div>
            
            <!-- Simulated Monitoring -->
            <div class="space-y-4">
              <div class="p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">System Load</span>
                  <span class="text-green-400 text-sm">Normal</span>
                </div>
                <div class="w-full h-2 bg-gray-300 rounded-full">
                  <div class="h-2 bg-green-400 rounded-full animate-pulse progress-bar" style="width: 30%"></div>
                </div>
              </div>
              <div class="p-3 rounded-lg transition-colors duration-300" :class="lightMode ? 'bg-gray-50' : 'bg-gray-800'">
                <div class="flex justify-between items-center mb-2">
                  <span class="text-sm font-medium transition-colors duration-300" :class="lightMode ? 'text-gray-700' : 'text-gray-300'">Network I/O</span>
                  <span class="text-blue-400 text-sm">Active</span>
                </div>
                <div class="w-full h-2 bg-gray-300 rounded-full">
                  <div class="h-2 bg-blue-400 rounded-full animate-pulse progress-bar" style="width: 55%"></div>
                </div>
              </div>
            </div>
            
            <button onclick="toggleDemo('monitoring-demo')" class="w-full mt-6 py-2 rounded-lg font-medium transition-all duration-300 hover:scale-105 focus:outline-none focus:ring-2 focus:ring-purple-500/50" :class="lightMode ? 'bg-purple-600 text-white hover:bg-purple-700' : 'bg-purple-500 text-white hover:bg-purple-600'">
              View Metrics
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Demo Modal -->
<div id="demo-modal" class="fixed inset-0 bg-black bg-opacity-50 z-50 hidden">
  <div class="flex items-center justify-center min-h-screen p-4">
    <div class="max-w-4xl w-full max-h-screen overflow-y-auto rounded-xl border glassmorphism" :class="lightMode ? 'border-gray-200' : 'border-gray-700'">
      <div class="sticky top-0 flex justify-between items-center p-6 border-b glassmorphism" :class="lightMode ? 'border-gray-200' : 'border-gray-700'">
        <h2 id="demo-title" class="text-2xl font-bold transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'"></h2>
        <button onclick="closeDemoModal()" class="text-gray-500 hover:text-gray-700 transition-colors duration-300">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <div id="demo-content" class="p-6">
        <!-- Demo content will be loaded here -->
      </div>
    </div>
  </div>
</div>

<script>
  const demos = {
    'k8s-demo': {
      title: 'Kubernetes Dashboard Demo',
      content: `
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-6 rounded-xl text-white">
            <h3 class="text-xl font-bold mb-4">Cluster Overview</h3>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">3</div>
                <div class="text-sm">Nodes</div>
              </div>
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">12</div>
                <div class="text-sm">Pods</div>
              </div>
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">5</div>
                <div class="text-sm">Services</div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="border rounded-xl p-6" :class="lightMode ? 'bg-white border-gray-200' : 'bg-gray-800 border-gray-700'">
              <h4 class="font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Pod Status</h4>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <span class="text-sm">frontend-pod</span>
                  <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Running</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm">backend-pod</span>
                  <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Running</span>
                </div>
                <div class="flex items-center justify-between">
                  <span class="text-sm">db-pod</span>
                  <span class="px-2 py-1 bg-green-100 text-green-800 rounded-full text-xs">Running</span>
                </div>
              </div>
            </div>
            
            <div class="border rounded-xl p-6" :class="lightMode ? 'bg-white border-gray-200' : 'bg-gray-800 border-gray-700'">
              <h4 class="font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Resource Usage</h4>
              <canvas id="k8s-chart" width="300" height="200"></canvas>
            </div>
          </div>
        </div>
      `
    },
    'cicd-demo': {
      title: 'CI/CD Pipeline Demo',
      content: `
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-green-500 to-blue-600 p-6 rounded-xl text-white">
            <h3 class="text-xl font-bold mb-4">Pipeline Status</h3>
            <div class="flex items-center space-x-4">
              <div class="flex items-center">
                <div class="w-3 h-3 bg-green-400 rounded-full mr-2"></div>
                <span>Build #127</span>
              </div>
              <div class="flex items-center">
                <div class="w-3 h-3 bg-yellow-400 rounded-full mr-2"></div>
                <span>Deploying</span>
              </div>
              <div class="text-sm">2m 34s</div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 gap-6">
            <div class="border rounded-xl p-6" :class="lightMode ? 'bg-white border-gray-200' : 'bg-gray-800 border-gray-700'">
              <h4 class="font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Pipeline Stages</h4>
              <div class="space-y-4">
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-4">✓</div>
                  <div class="flex-1">
                    <div class="font-medium">Source</div>
                    <div class="text-sm text-gray-500">Git checkout completed</div>
                  </div>
                  <div class="text-sm text-gray-500">45s</div>
                </div>
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-4">✓</div>
                  <div class="flex-1">
                    <div class="font-medium">Build</div>
                    <div class="text-sm text-gray-500">Docker image created</div>
                  </div>
                  <div class="text-sm text-gray-500">2m 15s</div>
                </div>
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-4">✓</div>
                  <div class="flex-1">
                    <div class="font-medium">Test</div>
                    <div class="text-sm text-gray-500">All tests passed</div>
                  </div>
                  <div class="text-sm text-gray-500">1m 22s</div>
                </div>
                <div class="flex items-center">
                  <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center text-white font-bold text-sm mr-4 animate-pulse">⟳</div>
                  <div class="flex-1">
                    <div class="font-medium">Deploy</div>
                    <div class="text-sm text-gray-500">Deploying to production</div>
                  </div>
                  <div class="text-sm text-gray-500">Running...</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      `
    },
    'monitoring-demo': {
      title: 'Infrastructure Monitoring Demo',
      content: `
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-purple-500 to-pink-600 p-6 rounded-xl text-white">
            <h3 class="text-xl font-bold mb-4">System Health</h3>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">99.9%</div>
                <div class="text-sm">Uptime</div>
              </div>
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">45ms</div>
                <div class="text-sm">Response Time</div>
              </div>
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">1.2k</div>
                <div class="text-sm">Requests/min</div>
              </div>
              <div class="bg-white/20 rounded-lg p-4">
                <div class="text-2xl font-bold">0</div>
                <div class="text-sm">Errors</div>
              </div>
            </div>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="border rounded-xl p-6" :class="lightMode ? 'bg-white border-gray-200' : 'bg-gray-800 border-gray-700'">
              <h4 class="font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Server Metrics</h4>
              <div class="space-y-4">
                <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span>CPU Usage</span>
                    <span>45%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-blue-500 h-2 rounded-full progress-bar" style="width: 45%"></div>
                  </div>
                </div>
                <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span>Memory Usage</span>
                    <span>62%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-green-500 h-2 rounded-full progress-bar" style="width: 62%"></div>
                  </div>
                </div>
                <div>
                  <div class="flex justify-between text-sm mb-2">
                    <span>Disk Usage</span>
                    <span>28%</span>
                  </div>
                  <div class="w-full bg-gray-200 rounded-full h-2">
                    <div class="bg-purple-500 h-2 rounded-full progress-bar" style="width: 28%"></div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="border rounded-xl p-6" :class="lightMode ? 'bg-white border-gray-200' : 'bg-gray-800 border-gray-700'">
              <h4 class="font-bold mb-4 transition-colors duration-300" :class="lightMode ? 'text-gray-900' : 'text-white'">Network Traffic</h4>
              <canvas id="network-chart" width="300" height="200"></canvas>
            </div>
          </div>
        </div>
      `
    }
  };

  function toggleDemo(demoId) {
    const demo = demos[demoId];
    if (demo) {
      document.getElementById('demo-title').textContent = demo.title;
      document.getElementById('demo-content').innerHTML = demo.content;
      document.getElementById('demo-modal').classList.remove('hidden');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeDemoModal() {
    document.getElementById('demo-modal').classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  // Close modal when clicking outside
  document.getElementById('demo-modal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeDemoModal();
    }
  });
</script>
